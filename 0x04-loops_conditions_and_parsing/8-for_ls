#!/usr/bin/env bash
# This script lists filenames in the current directory, stripping the prefix before the first dash if present

for file in *; do
  # Skip if it's a hidden file
  [ "${file:0:1}" = "." ] && continue

  # Check if it's a regular file (not directory or special device)
  [ -f "$file" ] || continue

  # If file contains a dash, strip everything before first dash
  if [[ "$file" == *-* ]]; then
    echo "${file#*-}"
  else
    echo "$file"
  fi
done
